<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        tools:ignore="MissingConstraints">

        <!-- Student Profile Image (Optional) -->
        <ImageView
            android:id="@+id/img_student_profile"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="8dp"
            android:src="@drawable/placeholder_image_black"
            android:background="?android:attr/selectableItemBackground"
            android:scaleType="centerCrop" />

        <!-- Student Name -->
        <TextView
            android:id="@+id/txt_student_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="Student Name"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/black" />

        <!-- Attendance Dropdown Menu (Spinner) -->
        <Spinner
            android:id="@+id/spinner_attendance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:entries="@array/attendance_options"
            android:spinnerMode="dropdown"
            tools:ignore="TouchTargetSizeCheck" />
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>